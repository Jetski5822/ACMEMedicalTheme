@using System.Web.Mvc;

<div class="user-display pull-right">
    @if (WorkContext.CurrentUser != null) {
        <span class="user-actions">
            @Html.ActionLink(T("Sign Out").ToString(), "LogOff", new { Controller = "Account", Area = "Orchard.Users", ReturnUrl = Context.Request.RawUrl }, new { rel = "nofollow", @class="sign-out" })
        </span>
    }
</div>