@using Orchard.ContentManagement
@using Orchard.MediaLibrary.Fields
@using Orchard.Utility.Extensions;

@{
    var field = (MediaLibraryPickerField) Model.ContentField;
    string name = field.DisplayName;

    var imageLocation = ((string[])Model.ContentItem.AreaDescriptionPart.ImageLocation.SelectedValues).Single().ToLower();
}
@{
    var mediaPart = field.MediaParts.First();
}
<img src="@Display.ResizeMediaUrl(Path: field.FirstMediaUrl, Width: 200)" alt="@mediaPart.AlternateText" class="pull-@imageLocation img-responsive"/>